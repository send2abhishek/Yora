<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="0dp"
    app:cardUseCompatPadding="true"
    android:layout_margin="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:id="@+id/list_item_messgae_background"
        android:padding="3dp">


        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleType="fitXY"
            android:layout_marginRight="8dp"
            android:id="@+id/list_item_message_avatar"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="Abhishek Aryan"
            android:id="@+id/list_item_message_display_name"
            android:layout_toRightOf="@id/list_item_message_avatar"
            android:textColor="#000"
            android:layout_marginBottom="4dp"/>
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="27/10/2018"
        android:id="@+id/list_item_message_createdAt"
        android:layout_toRightOf="@id/list_item_message_avatar"
        android:layout_below="@id/list_item_message_display_name"
        android:layout_marginBottom="4dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="sent message"
            android:id="@+id/list_item_message_messageType"
            android:layout_toRightOf="@id/list_item_message_avatar"
            android:layout_below="@+id/list_item_message_createdAt"
            android:layout_marginBottom="4dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>