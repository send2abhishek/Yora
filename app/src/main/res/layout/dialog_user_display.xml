<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/dialog_user_display_avatar"
        android:layout_marginRight="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Display Name"
        android:layout_toRightOf="@+id/dialog_user_display_avatar"
        android:layout_alignTop="@+id/dialog_user_display_avatar"
        android:layout_alignBottom="@+id/dialog_user_display_avatar"
        android:gravity="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000"
        />

</RelativeLayout>